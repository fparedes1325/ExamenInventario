@model MOV_INVENTARIOS.Models.Mov_inventario

@{
    ViewData["Title"] = "Nuevo Inventario";
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<h3>@ViewData["Title"]?.ToString()"</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <b>Error :</b>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" 
            aria-label="Close"></button>
    </div>    
}
<form method="post" action="Create" class="mt-3" autocomplete="off">
    <div class="mb-4">
        <label class="form-label">COD_CIA</label>
        <input type="text" class="form-control" asp-for="COD_CIA" />
        <span asp-validation-for="COD_CIA" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label class="form-label">COMPANIA_VENTA_3</label>
        <input type="text" class="form-control" asp-for="COMPANIA_VENTA_3" />
        <span asp-validation-for="COMPANIA_VENTA_3" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label class="form-label">ALMACEN_VENTA</label>
        <input type="text" class="form-control" asp-for="ALMACEN_VENTA" />
        <span asp-validation-for="ALMACEN_VENTA" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label class="form-label">TIPO_MOVIMIENTO</label>
        <input type="text" class="form-control" asp-for="TIPO_MOVIMIENTO" />
        <span asp-validation-for="TIPO_MOVIMIENTO" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label class="form-label">TIPO_DOCUMENTO</label>
        <input type="text" class="form-control" asp-for="TIPO_DOCUMENTO" />
        <span asp-validation-for="TIPO_DOCUMENTO" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label class="form-label">NRO_DOCUMENTO</label>
        <input type="text" class="form-control" asp-for="NRO_DOCUMENTO" />
        <span asp-validation-for="NRO_DOCUMENTO" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label class="form-label">COD_ITEM_2</label>
        <input type="text" class="form-control" asp-for="COD_ITEM_2" />
        <span asp-validation-for="COD_ITEM_2" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label class="form-label">PROVEEDOR</label>
        <input type="text" class="form-control" asp-for="PROVEEDOR" />
    </div>
    <div class="mb-4">
        <label class="form-label">ALMACEN_DESTINO</label>
        <input type="text" class="form-control" asp-for="ALMACEN_DESTINO" />
    </div>
    <div class="mb-4">
        <label class="form-label">CANTIDAD</label>
        <input type="text" class="form-control" asp-for="CANTIDAD" />
    </div>
    <div class="mb-4">
        <label class="form-label">COMPANIA_DESTINO</label>
        <input type="text" class="form-control" asp-for="COMPANIA_DESTINO" />
    </div>
    <div class="mb-4">
        <label class="form-label">COSTO_UNITARIO</label>
        <input type="text" class="form-control" asp-for="COSTO_UNITARIO" />
    </div>
    <div class="mb-4">
        <label class="form-label">DOC_REF_1</label>
        <input type="text" class="form-control" asp-for="DOC_REF_1" />
    </div>
    <div class="mb-4">
        <label class="form-label">DOC_REF_2</label>
        <input type="text" class="form-control" asp-for="DOC_REF_2" />
    </div>
    <div class="mb-4">
        <label class="form-label">FECHA_TRANSACCION</label>
        <input type="text" class="form-control" asp-for="FECHA_TRANSACCION" />
    </div>



    <div class="mb-4">
        <div class="col-lg-12 d-grid">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}